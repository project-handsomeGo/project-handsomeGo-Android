<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:background="#ffffff"
        android:text="마이페이지"
        android:textColor="#000000"
        android:textSize="18dp"
        android:fontFamily="@font/nanumsquareround_b"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mypage_profile_circle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp" />
                <TextView
                    android:id="@+id/mypage_nickname_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mypage_profile_circle"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/nanumsquareround_b"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:text="최근 적립 날짜"
                        android:fontFamily="@font/nanumsquareround_b" />
                    <TextView
                        android:id="@+id/mypage_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquareround_r"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스탬프"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquareround_b"/>
                    <TextView
                        android:id="@+id/mypage_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquareround_r"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/edit_myinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:text="내 정보 수정"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquareround_b"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/mypage_edit_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="23dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/more_right" />
                </RelativeLayout>
                <View
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#f2f2f2" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:text="스탬프 적립내역"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquareround_b"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/stamp_more_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="23dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/more_down" />
                    <ImageView
                        android:id="@+id/stamp_nomore_btn"
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="23dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/more_up" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mypage_stamp_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <View
                        android:layout_width="330dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true"
                        android:background="#f2f2f2" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:id="@+id/stamp_recycler"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:text="로그아웃"
                    android:textColor="#000000"
                    android:fontFamily="@font/nanumsquareround_b"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/logout_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="23dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logout_btn" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>