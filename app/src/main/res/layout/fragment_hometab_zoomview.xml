<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/myframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- insert main map -->
            <!-- android:src="@drawable/map_image" -->
            <ImageView
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/map" />

            <!-- Dividing section, insert button -->
            <!-- android:src="@drawable/button_image" -->
            <Button
                android:id="@+id/yellow1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="31dp"
                android:background="@drawable/seoulgarden" />

            <Button
                android:id="@+id/yellow2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/yellow8"
                android:layout_toEndOf="@+id/yellow1"
                android:background="@drawable/namboo" />

            <Button
                android:id="@+id/yellow3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/blue1"
                android:layout_toStartOf="@+id/blue8"
                android:background="@drawable/hamsangpark" />

            <Button
                android:id="@+id/yellow4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="138dp"
                android:background="@drawable/culturestocking" />

            <Button
                android:id="@+id/yellow5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/blue8"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-359dp"
                android:background="@drawable/underbunker" />

            <Button
                android:id="@+id/yellow6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/blue1"
                android:layout_toStartOf="@+id/blue4"
                android:background="@drawable/geoksugung" />

            <Button
                android:id="@+id/yellow7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="106dp"
                android:layout_marginTop="133dp"
                android:background="@drawable/gyeongchun" />

            <Button
                android:id="@+id/yellow8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="356dp"
                android:layout_marginTop="276dp"
                android:background="@drawable/bongje" />

            <Button
                android:id="@+id/blue1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/blue4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="129dp"
                android:background="@drawable/innopark" />

            <Button
                android:id="@+id/blue2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/yellow2"
                android:layout_toEndOf="@+id/yellow4"
                android:background="@drawable/entrepreneurshiphub" />

            <Button
                android:id="@+id/blue3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/yellow6"
                android:layout_below="@+id/yellow6"
                android:background="@drawable/carindustry" />

            <Button
                android:id="@+id/blue4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/green2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="83dp"
                android:background="@drawable/hasudo" />

            <Button
                android:id="@+id/blue5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="312dp"
                android:layout_marginTop="391dp"
                android:background="@drawable/newplaza" />

            <Button
                android:id="@+id/blue6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/blue5"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-391dp"
                android:layout_marginEnd="92dp"
                android:background="@drawable/innohub" />

            <Button
                android:id="@+id/blue7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/yellow3"
                android:layout_marginStart="-106dp"
                android:layout_toEndOf="@+id/yellow7"
                android:background="@drawable/seoulscience" />

            <Button
                android:id="@+id/blue8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/map"
                android:layout_marginEnd="-138dp"
                android:layout_toStartOf="@+id/yellow4"
                android:background="@drawable/biohub" />

            <Button
                android:id="@+id/green1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="166dp"
                android:layout_toEndOf="@+id/yellow4"
                android:background="@drawable/donuimun" />

            <Button
                android:id="@+id/green2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/yellow8"
                android:layout_marginBottom="-276dp"
                android:layout_toStartOf="@+id/blue3"
                android:background="@drawable/seoullo" />

            <Button
                android:id="@+id/green3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/blue1"
                android:layout_toEndOf="@+id/green1"
                android:background="@drawable/sewoon" />

            <Button
                android:id="@+id/green4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/blue5"
                android:layout_toEndOf="@+id/yellow3"
                android:background="@drawable/seoulbiennale" />

            <!-- android:visibility="gone" -->
            <RelativeLayout
                android:id="@+id/space_info_layout"
                android:layout_width="333dp"
                android:layout_height="102dp"
                android:layout_alignBottom="@+id/blue6"
                android:layout_centerHorizontal="true"
                android:background="#B7F0B1"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/map_img"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:background="#47C83E" />

                <TextView
                    android:id="@+id/map_space_name"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/map_img"
                    android:text="덕수궁 돌담길"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/map_space_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_below="@+id/map_space_name"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/map_img"
                    android:text="서울 중구 정동"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/star_text"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_below="@+id/map_space_addr"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/map_img"
                    android:text="4.1"
                    android:textSize="18dp" />

                <RatingBar
                    android:id="@+id/star_rating"
                    style="?android:ratingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/map_space_addr"
                    android:layout_toRightOf="@+id/star_text"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />

            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>