<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/review_entire_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="22dp"
        android:paddingTop="10dp"
        android:paddingRight="22dp"
        android:paddingBottom="12dp">
        <RelativeLayout
            android:id="@+id/review_top_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/review_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#303030"
                android:layout_marginRight="7dp"
                android:fontFamily="@font/nanumsquareround_r"
                android:text="닉네임"/>
            <View
                android:id="@+id/review_bar_view"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:background="#979797"
                android:layout_toRightOf="@+id/review_name_tv"/>
            <TextView
                android:id="@+id/review_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/review_bar_view"
                android:layout_marginLeft="7dp"
                android:textSize="13sp"
                android:textColor="#9b9b9b"
                android:fontFamily="@font/nanumsquareround_r"
                android:text="2018.07.12"/>
        </RelativeLayout>
        <RatingBar
            android:id="@+id/review_rating_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_top_relative"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:numStars="5"
            />
        <TextView
            android:id="@+id/review_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_top_relative"
            android:layout_marginTop="28dp"
            android:textSize="12sp"
            android:textColor="#444444"
            android:fontFamily="@font/nanumsquareround_r"
            android:text="내용"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_below="@id/review_content_tv">
            <ImageView
                android:id="@+id/review_img1_iv"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/review_img2_iv"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/review_img3_iv"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/review_img4_iv"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/review_entire_relative"
        android:background="#f2f2f2"
        android:layout_marginTop="15dp"/>
</RelativeLayout>