<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context=".after_stamp.SimpleInfoActivity">
    <RelativeLayout
        android:id="@+id/simple_top_relative"
        android:layout_width="match_parent"
        android:layout_height="246dp">
        <ImageView
            android:id="@+id/simple_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/simple_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/simple_address_tv"
            android:layout_marginLeft="21dp"
            android:text="장소 이름"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:fontFamily="@font/nanumsquareround_b"
            android:shadowColor="#5d000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>

        <TextView
            android:id="@+id/simple_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="1dp"
            android:text="주소"
            android:fontFamily="@font/nanumsquareround_r"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:shadowColor="#5d000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_below="@+id/simple_top_relative">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/simple_cate_iv"
                android:layout_width="11dp"
                android:layout_height="53dp"
                android:background="@drawable/orange_square"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/simple_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#303030"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="35dp"
                android:layout_marginRight="27dp"
                android:fontFamily="@font/nanumsquareround_r"
                android:text="설명"
                />
        </RelativeLayout>
        <View
            android:id="@+id/simple_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/simple_line_view">
            <TextView
                android:id="@+id/simple_review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#434343"
                android:layout_marginRight="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nanumsquareround_r"
                tools:text="리뷰 개수"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:background="@drawable/reviewcount"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/simple_review_tv"
                android:layout_marginRight="4dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
    </LinearLayout>

    <Button
        android:id="@+id/simple_get_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nanumsquareround_r"
        android:text="스탬프 적립"/>
</RelativeLayout>